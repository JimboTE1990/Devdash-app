NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ==========================================
# STRIPE CONFIGURATION (TEST MODE)
# ==========================================
# Get from: https://dashboard.stripe.com/test/apikeys
#
# IMPORTANT: Make sure "Test mode" toggle is ON in Stripe dashboard!
#
# Format examples:
#   Publishable Key: pk_test_51ABC123...
#   Secret Key: sk_test_51ABC123...

# Publishable Key (safe to expose in browser)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_PUBLISHABLE_KEY_HERE

# Secret Key (keep private, never expose to browser)
STRIPE_SECRET_KEY=sk_test_YOUR_SECRET_KEY_HERE

# Webhook Secret (get this after setting up webhooks)
# For now, use placeholder: whsec_temp_testing
# Update later when you set up Stripe CLI or production webhooks
STRIPE_WEBHOOK_SECRET=whsec_temp_testing

# ==========================================
# APPLICATION CONFIGURATION
# ==========================================

# Local Development
NEXT_PUBLIC_APP_URL=http://localhost:4000

# For Production (update when deploying):
# NEXT_PUBLIC_APP_URL=https://www.jimbula.co.uk

